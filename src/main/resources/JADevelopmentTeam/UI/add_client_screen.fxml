<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JADevelopmentTeam.UI.AddClientScreenController">
   <children>
      <TextField fx:id="clientNameTextField" prefHeight="34.0" prefWidth="559.0" promptText="Clients name">
         <VBox.margin>
            <Insets left="30.0" right="30.0" top="30.0" />
         </VBox.margin>
      </TextField>
       <TextField fx:id="NIPTextField" prefHeight="34.0" prefWidth="559.0" promptText="NIP">
           <VBox.margin>
               <Insets left="30.0" right="30.0" top="30.0" />
           </VBox.margin>
       </TextField>
       <TextField fx:id="streetAndNumberTextField" prefHeight="34.0" prefWidth="559.0" promptText="Street and number">
           <VBox.margin>
               <Insets left="30.0" right="30.0" top="30.0" />
           </VBox.margin>
       </TextField>
       <TextField fx:id="postCodeTextField" prefHeight="34.0" prefWidth="559.0" promptText="Post Code">
           <VBox.margin>
               <Insets left="30.0" right="30.0" top="30.0" />
           </VBox.margin>
       </TextField>
       <TextField fx:id="cityTextField" prefHeight="34.0" prefWidth="559.0" promptText="City">
           <VBox.margin>
               <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
           </VBox.margin>
       </TextField>
        <JFXButton fx:id="addClientButton" buttonType="RAISED" disable="true" prefHeight="60.0" prefWidth="438.0" style="-fx-background-color: white;" text="Add Client">
            <font>
                <Font name="MathJax_Caligraphic-Bold" size="31.0" />
            </font>
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
        </JFXButton>
   </children>
</VBox>
